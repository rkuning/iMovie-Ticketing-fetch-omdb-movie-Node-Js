<div class="container-fluid">
  <% if (msg !== '') {%>
  <div class="row">
    <div class="alert alert-success col-12" role="alert"><%= msg %></div>
  </div>
  <% } %>

  <div class="row">
    <div class="col"></div>
    <div class="col-4 border bg-light rounded">
      <br />
      <h5 align="center" class="table-striped navbartext">UPDATE USER</h5>
      <br />
      <br />
      <form class="row g-3" method="post" action="/api/users/update/<%= resUser[0].id %> ">
        <div class="col-12">
          <label for="inputName" class="form-label">Name</label>
          <input type="text" class="form-control" id="inputName" name="name" disabled value="<%= resUser[0].name %>" />
        </div>
        <div class="col-12">
          <label for="inputPhone" class="form-label">Phone</label>
          <input type="number" class="form-control" id="inputPhone" name="phone" disabled value="<%= resUser[0].phone %>" />
        </div>
        <div class="col-6">
          <label for="inputLevel" class="form-label">Level</label>
          <select class="form-control" id="inputLevel" name="level">
            <option selected value="<%= resUser[0].level %>"><%= resUser[0].level %></option>
            <option value="admin">admin</option>
            <option value="user">user</option>
          </select>
        </div>
        <div class="col-6">
          <label for="inputStatus" class="form-label">Status</label>
          <select class="form-control" id="inputStatus" name="status">
            <option selected value="<%= resUser[0].status %>"><%= resUser[0].status %></option>
            <option value="active">active</option>
            <option value="unactive">unactive</option>
            <option value="blocked">blocked</option>
          </select>
        </div>
        <div class="col-4">
          <button type="submit" class="btn btn-outline-primary">Submit</button>
          <a href="/api/users" class="btn btn-outline-primary">Cancel</a>
        </div>
      </form>
      <br />
    </div>
    <div class="col"></div>
  </div>
</div>
